.sidebar {
  margin: 1em;
  width: 25%;
  min-width: 30rem;
  max-width: 50rem;
  cursor: pointer;
  position: absolute;
  top: 0;
  right: 0;
  max-height: 100%;
  justify-content: space-between;
  &>div {
    margin-top: 1em;
    padding: 1em;
    background-color: white;
    &:first-child {
      margin-top: 0;
    }
  }
  img {
    max-width: 100%;
  }
  min-width: 30rem;
  margin: 1rem;
  div.controls {
    ul {
      list-style: none;
      padding-left: 0;
    }
    .more {
      margin-top: 0.2em;
      color: #888888;
    }
  }
  li.hovered {
    background-color: #dddddd;
  }
  &>div {
    display: flex;
    flex-direction: column;
  }
}
