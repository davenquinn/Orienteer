.main
  font-family: 'Helvetica Neue', Helvetica, Arial
  ul
    margin: 3em auto
    min-width: 20em;
    width: 30%;
    font-size: 1.6em
    list-style: none
  li a
    display: block
    padding: .5em 1em
    margin-bottom: 1em
    background-color: #ddd
    color: #666
