.selection-panel {
  display: flex;
  flex-direction column
  flex: 1;
  position: relative;
  padding 10px 0;
  height: 100%;
  table {
    width: 100%;
    display: flex;
    flex-direction column;
    tbody {
      flex: 1;
      overflow-y: scroll;
    }
  }
  img {
    max-width: 100%;
  }
  div.controls {
    ul {
      list-style: none;
      padding-left: 0;
    }
    .more {
      margin-top: 0.2em;
      color: #888888;
    }
  }
}

.sidebar-inner
  flex: 1
  overflow-y: scroll

.dataViewer {
  overflow-y: scroll
}

:global
  .combined-panel
    display: flex
    flex-direction: row
    &>div
      flex-grow: 1

  box-sizing: border-box