.main
  font-family: 'Helvetica Neue', Helvetica, Arial
  width: 50%
  min-width: 20em
  margin: 3em auto
  ul
    font-size: 1.6em
    list-style: none
    padding-left: 0
  li a
    cursor: pointer
    display: block
    padding: .5em 1em
    margin-bottom: 1em
    background-color: #ddd
    color: #666
    &:hover
      background-color: dodgerblue
      color: white
      text-decoration: none

